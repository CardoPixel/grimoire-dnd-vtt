{
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"trailingComma": "all",
	"singleQuote": false,
	"semi": true,
	"plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-imports"],
	"importOrder": [
		"^.+\\.css$",
		"",
		"^react$",
		"^react/(.*)$",
		"",
		"^next$",
		"^next/(.*)$",
		"",
		"^next-[a-zA-Z0-9_-]+$",
		"^next-[a-zA-Z0-9_-]+/(.*)$",
		"",
		"^@/components/ui/(.*)$",
		"",
		"^@/(?!hooks)(.*)$",
		"",
		"^@/hooks/(.*)$"
	],
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
